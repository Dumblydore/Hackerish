<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--<item name="textAppearance">@style/TextAppearance</item>-->
        <!--<item name="textAppearanceSmall">@style/TextAppearance.Small</item>-->
        <!--<item name="textAppearanceMedium">@style/TextAppearance.Medium</item>-->
        <!--<item name="textAppearanceLarge">@style/TextAppearance.Large</item>-->
        <!--<item name="android:titleTextAppearance"></item>-->
        <!--<item name="android:subtitleTextAppearance"></item>-->
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.DoubleItem">
        <!--<item name="android:width">match_parent</item>-->
        <item name="android:height">@dimen/item_double_line</item>
    </style>

    <style name="TextAppearance" parent="TextAppearance.AppCompat"/>
    <style name="TextAppearance.Small" parent="TextAppearance.AppCompat.Small"/>
    <style name="TextAppearance.Medium" parent="TextAppearance.AppCompat.Medium"/>
    <style name="TextAppearance.Large" parent="TextAppearance.AppCompat.Large"/>
    <style name="TextAppearance.Title" parent="TextAppearance.AppCompat.Medium"/>
    <style name="TextAppearance.Subtitle" parent="TextAppearance.AppCompat.Small"/>


</resources>
